<!DOCTYPE html>
<html>
<head>
  <link rel="shortcut icon" href="../images/favicon.ico">
  <title>Magnetize</title>
  <%-include('stylesheets')%>
</head>
<body>
  <div class="">
  <div class="word row">
    <div class="mag center_align columns small-4 small-centered">
    <% if (poem) { %>
      <h2><%= title %></h2>
      <h3>by: <%= author %></h3>
      <% var lines = poem.split('\r\n'); %>
      <% lines.forEach(function (line) { %>
        <p>
          <% var words = line.split(' '); %>
          <% words.forEach(function (word) { %>
            <span><%= word %></span>
          <% }); %>
        </p>
      <% }); %>
    <% } %>
    </div>
    <div class="columns options small-4">
      <h4>Options</h4>
      <select>Text Alignment
        <option id="center-text" value="center">Center</option>
        <option id="justify-text" value="justify">Justify</option>
        <option id="left-text" value="left">Left</option>
        <option id="right-text" value="right">Right</option>
      </select>
    </div>
  </div>
  <div class="row">
    <div class="tumblr-button columns small-centered small-4">
      <a class="tumblr-share-button" href="https://www.tumblr.com/share"></a>
      <script id="tumblr-js" async src="https://assets.tumblr.com/share-button.js"></script>
    </div>
  </div>
  </div>
  <script src="../../js/main.js"></script>
</body>
</html>